<Window x:Class="OplataProezda.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OplataProezda"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="LightGreen">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Height="300" Background="White">
            <TextBox x:Name="LoginReg" VerticalAlignment="Top" HorizontalAlignment="Center" Width="130" Margin="10, 70, 10, 10"></TextBox>
            <PasswordBox x:Name="PassReg" VerticalAlignment="Top" HorizontalAlignment="Center" Width="130"></PasswordBox>
            <Button Content="Регистрация" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Height="20" Click="Button_Click" Margin="10, 10, 10, 10"></Button>
            <Button Content="Назад" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10, 100, 10, 10" Width="130" Click="Button_Click_1"></Button>
        </StackPanel>
    </Grid>
</Window>
